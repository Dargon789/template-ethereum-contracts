{
  "name": "template-contracts",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "devDependencies": {
    "@ignored/hardhat-vnext": "3.0.0-next.17",
    "@ignored/hardhat-vnext-keystore": "^3.0.0-next.13",
    "@ignored/hardhat-vnext-network-helpers": "^3.0.0-next.13",
    "@ignored/hardhat-vnext-node-test-runner": "^3.0.0-next.13",
    "@ignored/hardhat-vnext-viem": "^3.0.0-next.12",
    "@rocketh/deploy": "0.10.12",
    "@rocketh/deploy-proxy": "^0.10.13",
    "@rocketh/deploy-router": "^0.10.12",
    "@rocketh/doc": "^0.10.12",
    "@rocketh/export": "^0.10.15",
    "@rocketh/signer": "^0.10.12",
    "@rocketh/verifier": "^0.10.14",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.13.4",
    "as-soon": "^0.0.11",
    "eip-1193": "^0.6.1",
    "forge-std": "github:foundry-rs/forge-std#v1.9.4",
    "fs-extra": "^11.3.0",
    "hardhat3-rocketh": "^0.0.3",
    "ldenv": "^0.3.12",
    "prettier": "^3.5.1",
    "prettier-plugin-solidity": "^1.4.2",
    "rocketh": "^0.10.18",
    "set-defaults": "^0.0.5",
    "solidity-kit": "^0.5.1",
    "solidity-proxy": "^0.4.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "viem": "^2.23.2",
    "vitest": "^3.0.5"
  },
  "scripts": {
    "prepare": "set-defaults .vscode",
    "docgen": "ldenv -m hardhat pnpm run deploy hardhat --save-deployments true --skip-prompts ~~ pnpm rocketh-doc -n @@MODE --except-suffix _Implementation,_Proxy,_Router,_Route ~~ @@",
    "local_node": "hardhat3 node",
    "compile": "hardhat3 compile",
    "compile:watch": "as-soon -w src pnpm compile",
    "execute": "ldenv -n HARDHAT_NETWORK -m localhost tsx @@",
    "fork:execute": "ldenv -m localhost tsx @=HARDHAT_FORK=@@MODE @@",
    "deploy": "pnpm compile && ldenv hardhat3 --network @@MODE deploy @@",
    "fork:deploy": "pnpm compile && ldenv hardhat3 @=HARDHAT_FORK=@@MODE --network @@MODE deploy @@",
    "deploy:dev": "ldenv hardhat3 --network @@MODE deploy --skip-prompts @@",
    "deploy:watch": "ldenv -m localhost as-soon -w generated -w deploy pnpm run deploy:dev @@MODE @@",
    "verify": "ldenv rocketh-verify -n @@MODE @@",
    "test": "pnpm compile && vitest",
    "export": "rocketh-export",
    "export-script-data": "ldenv rocketh-export -n @@MODE --ts ./scripts/data/contracts.ts @@",
    "start": "zellij --layout zellij.kdl a $npm_package_name || zellij --layout zellij.kdl -s $npm_package_name",
    "stop": "zellij kill-session $npm_package_name",
    "format:check": "prettier --check .",
    "format": "prettier --write ."
  }
}
